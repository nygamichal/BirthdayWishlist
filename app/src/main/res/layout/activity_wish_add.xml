<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.nygamichal.birthdaywishlist.WishAddActivity">

    <EditText
        android:id="@+id/editTextPerson"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Person name"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/editTextContent"
        android:layout_alignStart="@+id/editTextContent" />

    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/editTextContent"
        android:layout_width="348dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Content"
        tools:layout_editor_absoluteY="69dp"
        tools:layout_editor_absoluteX="18dp"
        android:layout_below="@+id/editTextPerson"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="123dp"
        tools:layout_editor_absoluteX="168dp"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select picture"
        tools:layout_editor_absoluteY="171dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/editTextContent"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:fabSize="normal"
        android:src="@drawable/ic_save_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        />
</RelativeLayout>
